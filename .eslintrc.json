{
	"root": true,
	"extends": [
		"wikimedia/client-es6",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"ext": "readonly",
		"OOJSPlus": "readonly",
		"moment": "readonly",
		"document": "readonly",
		"window": "readonly",
		"location": "readonly",
		"mediaWiki": "readonly"
	},
	"rules": {
		"es-x/no-array-prototype-includes": "off",
		"max-len": "off",
		"no-jquery/no-class-state": "off",
		"no-jquery/no-global-selector": "off",
		"no-prototype-builtins": "off",
		"no-jquery/no-done-fail": "warn"
	}
}
